<h1>ブランド</h1>
<!-- form_for部分 -->
<%= form_for @brand do |f| %>
    <h2>ブランド追加</h2>
    <%= f.text_field :brand_name %>
    <%= f.submit '投稿' %>
<% end %>

<h2>ブランド一覧</h2>
<% @brands.each do |b| %>
 <%= b.brand_name %>
 <%= link_to "edit", edit_brand_path(b) %>

  <% if b.items.presence != nil %>
    利用アイテムあり。削除不可 <br>
    <% else %>
   <%= link_to "destroy", brand_path(b), method: :delete %><br>
   <% end %>

<% end %>

<br>
<%= link_to "一覧へ戻る", items_path %>　｜　<%= link_to '投稿フォームへ戻る', new_item_path %>