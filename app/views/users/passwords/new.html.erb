<div class="form_base_signin">
	<div class="form_signin">
		<br>
		<br>
	 <h1 class="form_name">パスワードの変更</h1>
	 <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>

	  <div class="field">
 	  <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス" ,class: "form_style form_input" %><br>
	  </div>

	  <div class="actions">
	    <%= f.submit "パスワードの再発行",class: "btn" %><br>
	  </div>
	<% end %>

	<%= render "users/shared/links" %>
</div></div>
