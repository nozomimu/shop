<br>
<br>
<% if flash[:n] %>
	<div class="flash-message"><%= flash[:n] %></div>
<% end %>

<section>
	<div class="login-box">
	 <div class="gara"><h1>お問い合わせ</h1></div><br>
		<% if @contact.errors.any? %>
	    	<ul>
	      		<% @contact.errors.full_messages.each do |message| %>
	        		<li class="error-message"><font color='red'><%= message %></font></li>
	      		<% end %>
	    	</ul>
		<% end %>

		<%= form_for(@contact) do |f| %>
			<h3>
			お名前　　　　<%= f.text_field :name, :size=>"20",placeholder:"例）　山田 太郎" %>
			<br><br>

			お名前(カナ)　<%= f.text_field :kana_name, :size=>"20",placeholder:"例）　ヤマダ　タロウ" %>
			<br><br>

			メールアドレス　　<%= f.text_field :email, :size=>"40",placeholder:"例）　***@****.com" %>
			<br><br>

			電話番号（半角）　<%= f.text_field :phone, :size=>"40",placeholder:"例）　090-0000-0000" %>
			<br><br>

			お問い合わせ内容<br>
			<%= f.text_area :message, :size=>"60x15",placeholder:"お問い合わせ内容を入力してください。" %>
			<br><div>
				<%= f.submit "送信する",class:"btn" %>
		</div>
		<% end %>
	</div>
</h3>
</div>
</section>